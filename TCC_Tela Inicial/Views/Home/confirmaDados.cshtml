}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12">
                    <a type="submit" href="@Url.Action("Index", "Home")"><i class="bi bi-x"></i></a>
                </div>
            </div>
            <div class="modal-body">
                <b><p class="msg-modal">Reserva realizada com sucesso!<br><br>Dentro de alguns instantes você receberá um e-mail com todas as informações da reserva.<br><br>Agradecemos a preferência.</p></b>
            </div>
        </div>
    </div>
</div>
